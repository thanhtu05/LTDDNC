{
    "info": {
        "name": "LTDD - API Security Tests",
        "description": "Test 4 layers bảo mật API: Input Validation, Rate Limiting, Authentication, Authorization",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://172.16.30.39:3000/api",
            "type": "string"
        },
        {
            "key": "user_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "admin_token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Input Validation Tests",
            "item": [
                {
                    "name": "Test 1.1: Register without phone",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/register",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test User\",\n  \"password\": \"123456\"\n}"
                        }
                    }
                },
                {
                    "name": "Test 1.2: Register with invalid phone",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/register",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone\": \"123\",\n  \"name\": \"Test User\",\n  \"password\": \"123456\"\n}"
                        }
                    }
                },
                {
                    "name": "Test 1.3: Register with short password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/register",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone\": \"0123456789\",\n  \"name\": \"Test User\",\n  \"password\": \"12\"\n}"
                        }
                    }
                },
                {
                    "name": "Test 1.4: Login with invalid phone format",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/login",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone\": \"abc123\",\n  \"password\": \"123456\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "2. Rate Limiting Tests",
            "item": [
                {
                    "name": "Test 2.1: Login (Call 6 times fast)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/login",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone\": \"0999999999\",\n  \"password\": \"wrongpassword\"\n}"
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// NOTE: Chạy request này 6 lần liên tiếp",
                                    "// Request thứ 6 sẽ trả về 429 Too Many Requests"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "3. Authentication Tests",
            "item": [
                {
                    "name": "Test 3.1: Get profile WITHOUT token",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/profile"
                    }
                },
                {
                    "name": "Test 3.2: Get profile with INVALID token",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer invalid_token_here"
                            }
                        ],
                        "url": "{{base_url}}/profile"
                    }
                },
                {
                    "name": "Test 3.3: Login as User (Save Token)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/login",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone\": \"0987654321\",\n  \"password\": \"123456\"\n}"
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.data && jsonData.data.token) {",
                                    "    pm.collectionVariables.set('user_token', jsonData.data.token);",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Test 3.4: Get profile with VALID token",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{user_token}}"
                            }
                        ],
                        "url": "{{base_url}}/profile"
                    }
                }
            ]
        },
        {
            "name": "4. Authorization Tests",
            "item": [
                {
                    "name": "Test 4.1: Login as Admin (Save Token)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/login",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone\": \"0123456789\",\n  \"password\": \"123456\"\n}"
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.data && jsonData.data.token) {",
                                    "    pm.collectionVariables.set('admin_token', jsonData.data.token);",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Test 4.2: User tries to get all users (FAIL)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{user_token}}"
                            }
                        ],
                        "url": "{{base_url}}/users"
                    }
                },
                {
                    "name": "Test 4.3: Admin gets all users (SUCCESS)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": "{{base_url}}/users"
                    }
                },
                {
                    "name": "Test 4.4: User tries to delete user (FAIL)",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{user_token}}"
                            }
                        ],
                        "url": "{{base_url}}/users/999"
                    }
                },
                {
                    "name": "Test 4.5: Admin deletes user (SUCCESS)",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": "{{base_url}}/users/999"
                    }
                }
            ]
        },
        {
            "name": "5. Normal Operations (For Testing)",
            "item": [
                {
                    "name": "Register New User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/register",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone\": \"0111111111\",\n  \"name\": \"Test User\",\n  \"password\": \"123456\",\n  \"email\": \"test@example.com\"\n}"
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/login",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone\": \"0123456789\",\n  \"password\": \"123456\"\n}"
                        }
                    }
                },
                {
                    "name": "Forgot Password (Send OTP)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/forgot-password",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone\": \"0123456789\"\n}"
                        }
                    }
                }
            ]
        }
    ]
}